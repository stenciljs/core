{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "paths": {
      "@stencil/core": [
        "../../internal"
      ],
      "@stencil/core/compiler": [
        "../../compiler"
      ],
      "@stencil/core/internal": [
        "../../internal"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
