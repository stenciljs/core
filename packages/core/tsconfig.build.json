{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["dom", "es2021"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "noImplicitOverride": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es2022",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@stencil/mock-doc": ["./src/declarations/stencil-private.ts"],
      "@stencil/core/mock-doc": ["./src/declarations/stencil-private.ts"],
      "@stencil/core/declarations": ["./src/declarations/index.ts"],
      "@stencil/core/dev-server": ["./src/declarations/stencil-private.ts"],
      "@stencil/core/testing": ["./src/declarations/stencil-private.ts"],
      "@utils": ["./src/utils/index.ts"],
      "@utils/*": ["./src/utils/*"],
      "@app-data": ["./src/app-data/index.ts"],
      "@app-globals": ["./src/app-globals/index.ts"],
      "@stencil/core/compiler": ["./src/compiler/index.ts"],
      "@stencil/core/internal": ["./src/internal/index.ts"],
      "@stencil/core/internal/client": ["./src/client/index.ts"],
      "@platform": ["./src/client/index.ts"],
      "@runtime": ["./src/runtime/index.ts"],
      "@sys-api-node": ["./src/sys/node/index.ts"],
      "@environment": ["./src/compiler/sys/environment.ts"],
      "@hydrate-factory": ["./src/server/runner/hydrate-factory.ts"],
      "resolve": ["./src/declarations/stencil-private.ts"],
      "merge-source-map": ["./src/declarations/stencil-private.ts"],
      "@ionic/prettier-config": ["./src/declarations/stencil-private.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/test/**",
    "src/**/tests/**",
    "src/**/*.stub.ts",
    "dist"
  ]
}
