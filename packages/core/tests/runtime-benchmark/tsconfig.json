{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "paths": {
      "@stencil/core": ["../../internal"],
      "@stencil/core/internal": ["../../internal"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
