{
  "name": "@stencil/cli",
  "version": "5.0.0-alpha.0",
  "description": "CLI for Stencil - Web component compiler",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./cli": "./bin/stencil.mjs"
  },
  "bin": {
    "stencil": "./bin/stencil.mjs"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "dev": "pnpm run \"/^dev:/\"",
    "dev:typecheck": "tsc --noEmit --watch",
    "dev:build": "tsdown --watch"
  },
  "peerDependencies": {
    "@stencil/core": "^5.0.0"
  },
  "devDependencies": {
    "@stencil/core": "workspace:*",
    "tsdown": "^0.20.3",
    "typescript": "~5.8.3"
  }
}
